{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    "lib": [
      "ESNext"
    ],
    "types": [
      "node",
      "express"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleDetection": "force"
  },
  "include": [
    "src"
  ], // sรณ inclui arquivos da pasta src
  "exclude": [
    "node_modules",
    "prisma/seed.ts"
  ] // ignora o seed
}